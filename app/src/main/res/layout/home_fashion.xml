<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@drawable/shape_home_rec">

    <ImageView
        android:id="@+id/fashion_image"
        android:layout_width="85dp"
        android:layout_height="98dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/fasion_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/fashion_image"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="姓名"
        android:textColor="#666666"
        android:textSize="12dp"
        />

    <TextView
        android:id="@+id/fashion_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/fashion_image"
        android:layout_marginLeft="20dp"
        android:textSize="14dp"
        android:textColor="#ff0000"
        android:text="699"
        android:layout_alignBottom="@id/fashion_image"
        />

</RelativeLayout>
