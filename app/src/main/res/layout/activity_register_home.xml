<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loginbackground"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:id="@+id/register_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp">

        <ImageView
            android:id="@+id/register_phone_phone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="36dp"
            android:src="@mipmap/login_icon_phone_n_xhdpi" />

        <EditText
            android:id="@+id/register_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="36dp"
            android:layout_toRightOf="@id/register_phone_phone"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="手机号"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textCursorDrawable="@drawable/shape_login_edit"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/register_phone_phone"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="10dp"
            android:background="#fff" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/register_Validate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_phone"
        android:layout_marginRight="36dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/register_verify_verify"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="36dp"
            android:src="@mipmap/login_icon_verificationcode_n_xxhdpi" />

        <EditText
            android:id="@+id/register_verify"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="36dp"
            android:layout_toRightOf="@id/register_verify_verify"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="验证码"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textCursorDrawable="@drawable/shape_login_edit"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:textSize="10dp" />

        <View
            android:id="@+id/register_getverify"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/register_verify_verify"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="10dp"
            android:background="#fff" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/register_mima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_Validate"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/register_lock"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="36dp"
            android:src="@mipmap/login_icon_lock_n_xhdpi" />

        <EditText
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="36dp"
            android:layout_toRightOf="@id/register_lock"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="登录密码"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textCursorDrawable="@drawable/shape_login_edit"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/register_conceal"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36dp"
            android:src="@mipmap/login_icon_eye_n_xhdpi" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/register_lock"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="10dp"
            android:background="#fff" />
    </RelativeLayout>

    <TextView
        android:id="@+id/register_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/register_mima"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:text="已有账户？立即登录"
        android:textColor="#ffffff"
        android:textSize="14dp" />


    <TextView
        android:id="@+id/register_enter"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="125dp"
        android:background="@drawable/shapelogin"
        android:gravity="center"
        android:text="注册"
        android:textColor="#ff5f71"
        android:textSize="18sp" />

</RelativeLayout>